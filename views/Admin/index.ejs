            <!-- Sale & Revenue Start -->
            <div class="container-fluid pt-4 px-4">
                
                <div class="row g-4">
                    <!-- Existing Revenue Section -->
                    <div class="col-sm-6 col-xl-3">
                        <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                            <i class="fa fa-chart-line fa-3x text-primary"></i>
                            <div class="ms-3">
                                <p class="mb-2">Revenue</p>
                                <h6 class="mb-0">₹<%=totalAmount%></h6>
                            </div>
                        </div>
                    </div>
                    <!-- Existing Total Orders Section -->
                    <div class="col-sm-6 col-xl-3">
                        <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                            <i class="fa fa-chart-area fa-3x text-primary"></i>
                            <div class="ms-3">
                                <p class="mb-2">Total Orders</p>
                                <h6 class="mb-0"><%=totalQuantityCount%></h6>
                            </div>
                        </div>
                    </div>
                    <!-- Existing Products Section -->
                    <div class="col-sm-6 col-xl-3">
                        <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                            <i class="fa fa-chart-bar fa-3x text-primary"></i>
                            <div class="ms-3">
                                <p class="mb-2">Products</p>
                                <h6 class="mb-0"><%=totalProductCount%></h6>
                            </div>
                        </div>
                    </div>
                    <!-- Existing Monthly Total Sales Section -->
                    <div class="col-sm-6 col-xl-3">
                        <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                            <i class="fa fa-chart-pie fa-3x text-primary"></i>
                            <div class="ms-3">
                                <p class="mb-2">This Months's Sales</p>
                                <h6 class="mb-0">₹<%=totalMonthlySalesSum%></h6>
                            </div>
                        </div>
                    </div>
            
                    <!-- New Weekly Sales Section -->
                    <div class="col-sm-6 col-xl-3">
                        <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                            <i class="fa fa-calendar fa-3x text-primary"></i>
                            <div class="ms-3">
                                <p class="mb-2">This Week's Sales</p>
                                <h6 class="mb-0">₹<%=totalWeeklySalesSum%></h6>
                            </div>
                        </div>
                    </div>
                    <!-- New Monthly Total Sales Section -->
                    <div class="col-sm-6 col-xl-3">
                        <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                            <i class="fa fa-calendar-alt fa-3x text-primary"></i>
                            <div class="ms-3">
                                <p class="mb-2">Yearly Sales</p>
                                <h6 class="mb-0">₹<%=totalYearlySalesSum%></h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Sale & Revenue End -->


            <!-- Sales Chart Start -->
            <div class="container-fluid pt-4 px-4">
                <a href="/admin/salesReport"><button style="margin-left: 90%;" class="btn btn-primary mb-4">Sales Report</button></a>
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary text-center rounded p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">Worldwide Sales</h6>
                                
                            </div>
                            <canvas id="worldwide-sales"></canvas>
                        </div>
                    </div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary text-center rounded p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">Sales & Revenue</h6>
                                
                            </div>
                            <canvas id="salse-revenue"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Sales Chart End -->


            <!-- Recent Sales Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">Recent Users</h6>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">
                                    <th scope="col">Customer</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Mobile</th>
                                    <th scope="col">Joined Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i = 0; i < users.length; i++) { %>
                                    <tr>
                                        <td><%= users[i].username %></td>
                                        <td><%= users[i].email %></td>
                                        <td><%= users[i].phone %></td>
                                        <td><%= new Date(users[i].createdAt).toLocaleString() %></td>
                                    </tr>
                                <% } %>
                            </tbody>
                            
                        </table>
                    </div>
                    
                </div>
            </div>
            <!-- Recent Sales End -->


            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">Recent Orders</h6>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">
                                    <th scope="col">Order Id</th>
                                    <th scope="col">Billing Name</th>
                                    <th scope="col">Date</th>
                                    <th>Items</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Order Status</th>
                                    <th scope="col">Payment Method</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i = 0; i < orders.length; i++) { %>
                                    <tr>
                                        <td><%= orders[i].order_id %></td>
                                        <td><%= orders[i].user_name %></td>
                                        <td><%= new Date(orders[i].date).toLocaleString() %></td>
                                        <td><%= orders[i].items.length %></td>
                                        <td><%= orders[i].total_amount %></td>
                                        <td><%= orders[i].items.length > 0 ? orders[i].items[0].ordered_status : '' %></td>
                                        <td><%= orders[i].payment  %></td>
                                        <td>
                                            <a href="/admin/viewOrders?orderId=<%= orders[i].order_id %>">
                                                <button class="btn btn-primary">View Details</button>
                                            </a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    
                </div>
            </div>


            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
