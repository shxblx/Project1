  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const productListContainer = document.getElementById('product-list-container');
      const paginationContainer = document.querySelector('.pagination-container');
      const pageSize = 6; // Set the number of products per page

      async function fetchAndDisplayProducts(page) {
        try {
          const response = await fetch(`/api/products?page=${page}&pageSize=${pageSize}`);
          const data = await response.json();

          productListContainer.innerHTML = ''; // Clear the existing product list
          if (data.products.length > 0) {
            data.products.forEach(product => {
              const productHTML = `<div class="col-lg-6 col-md-6 item-entry mb-4">
                                         <a href="/item?id=${product._id}" class="product-item md-height d-block" style="margin-right: 100px;">
                                            <img src="/myImages/${product.image[0]}" alt="Image" class="img-fluid">
                                         </a>
                                         <a href="/item" style="font-size: 20px;color: black;">${product.name}</a>
                                         <h1 style="font-size: 15px;">${product.description}</h1>
                                         <strong class="item-price">₹${product.price}</strong>
                                      </div>`;
              productListContainer.innerHTML += productHTML;
            });
          } else {
            productListContainer.innerHTML = '<p>No products found.</p>';
          }

          displayPagination(data.totalPages, page);
        } catch (error) {
          console.error('Error fetching products:', error);
        }
      }

      function displayPagination(totalPages, currentPage) {
        paginationContainer.innerHTML = '';
        for (let i = 1; i <= totalPages; i++) {
          const pageLink = document.createElement('a');
          pageLink.href = '#';
          pageLink.textContent = i;
          pageLink.addEventListener('click', () => fetchAndDisplayProducts(i));

          if (i === currentPage) {
            pageLink.classList.add('active');
          }

          paginationContainer.appendChild(pageLink);
        }
      }

      fetchAndDisplayProducts(1);
    });
  </script>
  <script>
    // Assume products is an array of objects with 'price' property
    const products = [
      { price: 10 },
      { price: 20 },
      { price: 30 },
      // ... add more products
    ];

    // Calculate the minimum and maximum prices
    const minPrice = Math.min(...products.map(product => product.price));
    const maxPrice = Math.max(...products.map(product => product.price));

    // Initialize the slider
    $(function () {
      $("#slider-range").slider({
        range: true,
        min: minPrice,
        max: maxPrice,
        values: [minPrice, maxPrice],
        slide: function (event, ui) {
          $("#amount").val("$" + ui.values[0] + " - $" + ui.values[1]);
        }
      });
      $("#amount").val("$" + $("#slider-range").slider("values", 0) +
        " - $" + $("#slider-range").slider("values", 1));
    });
  </script>

