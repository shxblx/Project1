        background-color: #747474;
    }

    .otp-animation-custom {
        animation: slideIn 0.5s ease-out;
    }

    @keyframes slideIn {
        0% {
            opacity: 0;
            transform: translateY(-20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
