        <script>
            function moveToNext(currentInput) {
                const inputValue = currentInput.value;

                // Allow only single digits
                currentInput.value = inputValue.replace(/\D/g, '');

                if (currentInput.value && currentInput.nextElementSibling) {
                    currentInput.nextElementSibling.focus();
                } else if (!currentInput.value && currentInput.previousElementSibling) {
                    currentInput.previousElementSibling.focus();
                }
            }



            let countdownTime = 120;

            function updateTimer() {
                document.getElementById('countdown').innerText = "Expires in: " + countdownTime + ' seconds';
            }

            function startCountdown() {
                updateTimer();

                const countdownInterval = setInterval(() => {
                    countdownTime--;

                    updateTimer();

                    if (countdownTime === 0) {
                        clearInterval(countdownInterval);

                    }
                }, 1000);
            }

            window.onload = startCountdown;
        </script>

