            font-size: 20px;
            text-align: center;
            margin: 5px;
            border: 2px solid #ddd;
            border-radius: 5px;
            outline: none;
        }

        .otp-input-custom:focus {
            box-shadow: 0 0 5px #000000;
            border-color: #000000;
        }

        .otp-input-custom:hover {
            border-color: #000000;
        }

        .otp-container-custom input[type="number"]::-webkit-inner-spin-button,
        .otp-container-custom input[type="number"]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .otp-container-custom button {
            border-radius: 5px;
            background-color: #000000;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s;
        }

        .otp-container-custom button:hover {
            background-color: #747474;
        }

        .otp-animation-custom {
            animation: slideIn 0.5s ease-out;
        }

        @keyframes slideIn {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

