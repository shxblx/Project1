    </div>  

    <div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <span class="icon-check_circle display-3 text-success"></span>
            <h2 class="display-3 text-black">Thank you!</h2>
            <p class="lead mb-5">Your order was successfully completed. Here are your order details:</p>
  
            <div class="bill-container">
              <div class="bill-header">
                <h3>Order Details</h3>
              </div>
              <div class="bill-content">
                <!-- Order 1 -->
                <div class="bill-item">
                  <span class="item-key">Order ID:</span>
                  <span class="item-value"><%=orders._id%></span>
                </div>
                <div class="bill-item">
                  <span class="item-key">Username</span>
                  <span class="item-value"><%=user.username%></span>
                </div>
                <div class="bill-item">
                  <span class="item-key">Address:</span>
                  <span class="item-value"><%=orders.delivery_address%></span>
                </div>
                <div class="bill-item">
                  <span class="item-key">Price:</span>
                  <span class="item-value">₹<%=orders.total_amount%></span>
                </div>
                <div class="bill-item">
                  <span class="item-key">Order Date:</span>
                  <span class="item-value"><%= moment(orders.date).format('DD/MM/YYYY')%></span>
                </div>
  
                <!-- Repeat the above structure for each item in the order -->
  
                <div class="bill-total">
                  <span>Total:</span>
                  <span class="total-amount">₹<%=orders.total_amount%></span>
                </div>
              </div>
            </div>
  
            <!-- Repeat the above structure for each order -->
  
            <p><a href="/shop" class="btn btn-sm height-auto px-4 py-3 btn-primary">Back to shop</a></p>
          </div>
        </div>
      </div>
    </div>

    

