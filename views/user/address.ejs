<body>
    <style>
        .container {
            margin-top: 20px;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }
    
        .address-details {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            position: relative;
        }
    
        .address-details h4 {
            color: #333;
            font-size: 20px;
            margin-bottom: 10px;
        }
    
        .address-details p {
            margin: 8px 0;
            font-size: 16px;
            color: #555;
        }
    
        .delete-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #ff5050;
            color: #fff;
            border: none;
            padding: 8px;
            border-radius: 4px;
            cursor: pointer;
        }
    
        .delete-button:hover {
            background-color: #e00000;
        }
    
        .no-address {
            margin-top: 20px;
            padding: 15px;
            background-color: #f8f8f8;
            border: 1px solid #eee;
            border-radius: 8px;
            color: #777;
            text-align: center;
        }
    
        .no-address p {
            margin: 0;
            font-size: 18px;
        }
        .edit-button {
        position: absolute;
        top: 10px;
        right: 44px;
        background-color: #4caf50;
        color: #fff;
        border: none;
        padding: 8px;
        border-radius: 4px;
        cursor: pointer;
    }

    .edit-button:hover {
        background-color: #45a049;
    }
    .add-address-button {
            margin-bottom: 20px; /* Add margin to separate the button from address details */
            background-color: #ee4266;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 4px;
            cursor: pointer;
        }

        .add-address-button:hover {
            background-color: #d12e51;
        }
    </style>

    <div class="wrapper">
        <div class="sidebar">
            <!--
          Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"
  
          Tip 2: you can also add an image using data-image tag
      -->
            <div class="sidebar-wrapper" style="background-color: #ee4266;">
                <div class="logo">
                    <a href="http://www.creative-tim.com" class="simple-text">
                        GROOVE STYLE
                    </a>
                </div>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>User Profile</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="/orders">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>Orders</p>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/viewAddress">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>Address</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class="container-fluid">
                    <a style="color: #ee4266;" href="/home">Home</a>
                    <a style="margin-left: 10px;color: #ee4266;" href="/shop">Shop</a>
                    <button href="" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                        aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="nav navbar-nav mr-auto">
                            <li class="nav-item">



                                </a>
                            </li>


                        </ul>
                        <ul class="navbar-nav ml-auto">


                            <li class="nav-item">
                                <a class="nav-link" href="/userLogout">
                                    <span class="no-icon">Log out</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->


        <div class="container">
           <a href="/addAddress"><button class="add-address-button">Add Address</button></a>
                <% if (userData && userData.address && userData.address.length > 0) { %>
                    <% userData.address.forEach((address, index) => { %>
                        <div class="address-details">
                            <button class="delete-button" onclick="deleteAddress(event)"><i class="fa-solid fa-trash"></i></button>
                            <button class="edit-button" onclick="editAddress(event)"><i class="fa-solid fa-pen"></i></button>
                            <h4>Address <%= index + 1 %></h4>
                            <p>Name: <%= address.name %></p>
                            <p>House Name: <%= address.housename %></p>
                            <p>City: <%= address.city %></p>
                            <p>State: <%= address.state %></p>
                            <p>Phone: <%= address.phone %></p>
                            <p>Pincode: <%= address.pincode %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="no-address">
                        <p>No addresses found.</p>
                    </div>
                <% } %>
            </div>








            <footer style="margin-top: 45%;" class="footer">
                <div class="container-fluid">
                    <nav>

                        <p class="copyright text-center">
                            Â©
                            <script>
                                document.write(new Date().getFullYear())
                            </script>
                            <a href="https://shxblx.github.io/shibli/">Muhammed Shibli</a>, made with love for a better
                            web
                        </p>
                    </nav>
                </div>
            </footer>
        </div>
    </div>

</body>
