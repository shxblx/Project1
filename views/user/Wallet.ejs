             <!-- wallet.ejs -->

             <div class="wallet-container">
                <div class="balance-container">
                    <div class="balance-label">Wallet Balance</div>
                    <div class="balance-amount">₹<%= user.wallet.toFixed(2) %></div>
                </div>
            
                <div class="history-container">
                    <% 
                    const reversedHistory = user.wallet_history ? user.wallet_history.slice().reverse() : [];
                    if (reversedHistory.length > 0) { 
                    %>
                        <% reversedHistory.forEach(historyItem => { %>
                            <div class="history-item <%= historyItem.description === 'Debited' ? 'text-danger' : 'text-success' %> row">
                                <div class="history-date col-4 text-muted"><%= historyItem.date.toDateString() %></div>
                                <div class="history-description col-4"><%= historyItem.description %></div>
                                <div class="history-amount col-4 <%= historyItem.description === 'Debited' ? 'text-danger' : '' %>">
                                    <%= historyItem.description === 'Debited' ? '-' : '+' %>₹<%= Math.abs(historyItem.amount).toFixed(2) %>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No wallet history available.</p>
                    <% } %>
                </div>
            </div>
            
            
            

 
 
 
 
 
 
 
 
