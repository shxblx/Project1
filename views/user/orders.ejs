<body>

    <style>
        .container {
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .order-details {
            background-color: #f5f5f5;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        .fs-4 {
            margin-bottom: 10px;
            color: #333;
        }

        .total-amount {
            font-size: 1.2rem;
            margin-top: 15px;
            color: #dc3545;
        }

        .product-details {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 15px;
        }

        .product-details img {
            max-width: 100px;
            max-height: 100px;
            margin-right: 15px;
            border-radius: 5px;
        }

        .product-details .details {
            flex: 1;
        }

        .btn-end {
            background-color: #dc3545;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-end:hover {
            background-color: #dc3545;
            color: #fff;
            /* Text color when button is hovered */
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
            /* Add color transition */
        }

        .no-items {
            margin-top: 20px;
            text-align: center;
            font-size: 1.2rem;
            color: #6c757d;
        }
    </style>
    <style>
        @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }
    </style>
    <div class="wrapper">
        <div class="sidebar">
            <!--
         Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"
 
         Tip 2: you can also add an image using data-image tag
     -->
            <div class="sidebar-wrapper" style="background-color: #ee4266;">
                <div class="logo">
                    <a href="http://www.creative-tim.com" class="simple-text">
                        GROOVE STYLE
                    </a>
                </div>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>User Profile</p>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/orders">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>Orders</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="/viewAddress">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>Address</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class="container-fluid">
                    <a style="color: #ee4266;" href="/home">Home</a>
                    <a style="margin-left: 10px;color: #ee4266;" href="/shop">Shop</a>
                    <button href="" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                        aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="nav navbar-nav mr-auto">
                            <li class="nav-item">



                                </a>
                            </li>


                        </ul>
                        <ul class="navbar-nav ml-auto">


                            <li class="nav-item">
                                <a class="nav-link" href="/userLogout">
                                    <span class="no-icon">Log out</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->



            <div class="card fade-in">
            <div class="container w-50">
                <% if (orders.length> 0) { %>
                    <% orders.forEach(order=> { %>
                        <div class="order-details">
                            <div class="fs-4"><strong># Order ID:</strong> <b>
                                    <%= order.order_id %>
                                </b></div>
                            <hr>
                            <div class="d-flex flex-wrap">
                                <!-- Iterate through each item in the order -->
                                <% order.items.forEach(item=> { %>
                                    <div class="product-details">
                                        <img src="/myImages/<%= item.product_id.image[0] %>" class="img-fluid"
                                            alt="Product Image">
                                        <div class="details">
                                            <p><strong>Name:</strong>
                                                <%= item.product_id.name %>
                                            </p>
                                            <p><strong>Price:</strong> ₹ <%= item.product_id.price %>
                                            </p>
                                            <p><strong>Quantity:</strong>
                                                <%= item.quantity %>
                                            </p>
                                            <p><strong>Expected Delivery:</strong>
                                                <%= order.expected_delivery %>
                                            </p>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                            <p class="total-amount"><strong>Total Amount:</strong> ₹ <%= order.total_amount %>
                            </p>
                            <div class="d-flex justify-content-end">
                                <a href="/vieworders?orderId=<%= order.order_id %>"><input type="button"
                                        class="btn btn-md btn-danger btn-end" value="View Order"></a>
                            </div>
                            <!-- You can include more details if needed -->
                        </div>
                        <% }) %>
                            <% } else { %>
                                <div class="no-items">No items found in the order.</div>
                                <!-- If the order or items are null or empty, show a message or handle as needed -->
                                <% } %>
            </div>
            </div>








            <footer style="margin-top: 45%;" class="footer">
                <div class="container-fluid">
                    <nav>

                        <p class="copyright text-center">
                            ©
                            <script>
                                document.write(new Date().getFullYear())
                            </script>
                            <a href="https://shxblx.github.io/shibli/">Muhammed Shibli</a>, made with love for a better
                            web
                        </p>
                    </nav>
                </div>
            </footer>
        </div>
    </div>
