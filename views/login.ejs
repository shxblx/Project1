  <script>
    $(document).ready(function () {
      $('#loginForm').submit(function (event) {
        event.preventDefault();

        const email = $('#username').val().trim();
        const password = $('#password').val().trim();

        let hasError = false;

        if (email === "") {
          document.getElementById("emailValid").hidden = false;
          hasError = true;
        } else {
          document.getElementById("emailValid").hidden = true;
        }

        if (password === "") {
          document.getElementById("passValid").hidden = false;
          hasError = true;
        } else {
          document.getElementById("passValid").hidden = true;
        }

        if (hasError) {
          return;
        }

        fetch('/login', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ email, password }),
        })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: 'You have logged in successfully!',
              }).then(() => {
                window.location.href = '/home';
              });
            } else {
              console.error(data.message);
              $('#errorMessage').text(data.message);

              if (data.message.includes('User not found')) {
                window.location.href = '/login';
              } else if (data.message.includes('You have been blocked')) {
                window.location.href = '/login';
              } else if (data.message.includes('You are not verified')) {
                window.location.href = '/login';
              } else if (data.message.includes('Wrong password')) {
                window.location.href = '/login';
              } else {
                window.location.href = '/login';
              }
            }
          })
          .catch(error => {
            console.error(error);
          });
      });
    });
  </script>

  <script>
    var profileIcon = document.getElementById('profileIcon');
    var profileOptions = document.getElementById('profileOptions');

    profileIcon.addEventListener('click', function () {
      var rect = profileIcon.getBoundingClientRect();
      profileOptions.style.left = rect.left - 65 + 'px'; // Adjust the left position as needed
      profileOptions.style.top = rect.bottom - -20 + 'px';

      if (profileOptions.style.display === 'none' || profileOptions.style.display === '') {
        profileOptions.style.display = 'block';
      } else {
        profileOptions.style.display = 'none';
      }
    });
