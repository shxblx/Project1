    <script defer>
        function showLoadingModal() {
            // Show the loading modal
            $('#loadingModal').modal('show');
        }

        function hideLoadingModal() {
            // Hide the loading modal
            $('#loadingModal').modal('hide');
        }

        function validateForm(event) {
            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmpassword').value;

            const emailRegex = /^[^\s@]+@gmail\.com$/;
            if (!emailRegex.test(email)) {
                document.getElementById('emailValid').hidden = false;
                return false;
            }

            if (username.length < 3) {
                document.getElementById('nameValid').hidden = false;
                return false;
            }

            if (phone.length > 0 && !(/^\d{10}$/.test(phone))) {
                document.getElementById('phoneValid').hidden = false;
                return false;
            }

            const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()_+])[A-Za-z\d!@#$%^&*()_+]{8,}$/;
            if (!passwordRegex.test(password)) {
                document.getElementById('passValid').hidden = false;
                return false;
            }

            if (password !== confirmPassword) {
                document.getElementById('confirmValid').hidden = false;
                return false;
            }

            showLoadingModal();


            document.getElementById('signupForm').submit();


            event.preventDefault();
        }
    </script>

    <script>
        var profileIcon = document.getElementById('profileIcon');
        var profileOptions = document.getElementById('profileOptions');

        profileIcon.addEventListener('click', function () {
            var rect = profileIcon.getBoundingClientRect();
            profileOptions.style.left = rect.left - 65 + 'px'; // Adjust the left position as needed
            profileOptions.style.top = rect.bottom - -20 + 'px';

            if (profileOptions.style.display === 'none' || profileOptions.style.display === '') {
                profileOptions.style.display = 'block';
            } else {
                profileOptions.style.display = 'none';
            }
        });
    </script>
